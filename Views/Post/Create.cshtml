@model CreatePostModel

<div class="container">
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
                You're submiting this post <b>@Model.AuthorName</b>
                <div class="float-right" style="margin-bottom:10px">
                    <a asp-controller="Post" asp-action="Index" class="btn btn-warning float-right" >Back To Posts</a>
                </div>
            </div>
            
            <hr />
            <form asp-action="CreatePost" method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PostPictureUrl"></label>
                    <input asp-for="PostPictureUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="7" cols="150" placeholder="Content"></textarea>
                </div>
                <button type="submit" class="btn btn-primary float-right col-md-2">Submit</button>
            </form>
        </div>
    </div>
</div>
