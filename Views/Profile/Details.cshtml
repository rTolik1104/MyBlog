@model ProfileVM

<head>
    <title>Profile Details</title>
    <link rel="stylesheet" href="~/css/StyleSheet1.css" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
</head>
<body>
    <div class="cards">
        <div class="card-single">
            <div>
                <h1>@Model.PostsCount</h1>
                <span>Posts</span>
            </div>
            <div>
                <span class="las la-clipboard"></span>
            </div>
        </div>

        <div class="card-single">
            <div>
                <h1>@Model.ImagesCount</h1>
                <span>Images</span>
            </div>
            <div>
                <span class="las la-images"></span>
            </div>
        </div>

        <div class="card-single">
            <div>
                <h1>@Model.FriendsCount</h1>
                <span>Friends</span>
            </div>
            <div>
                <span class="las la-users"></span>
            </div>
        </div>

        <div class="card-single">
            <div>
                <h1>$6k</h1>
                <span>Income</span>
            </div>
            <div>
                <span class="las la-google-wallet"></span>
            </div>
        </div>
    </div>

    <div class="recent-grid">
        <div class="projects">
            <div class="card">
                <div class="card-header">
                    <h2>Personal Information</h2>
                    <a class="btn btn-primary text-white" onclick="showInPopup('@Url.Action("Edit","Profile",new {id = Model.UserId }, Context.Request.Scheme)','Edit Personal Information')">
                        Edit <span class="las la-pen"></span>
                    </a>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.UserName
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Email
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Profile Picture URL</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.ProfileImgUrl
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Phone</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PhoneNumber
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">About</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.About
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">About</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.AboutTitle
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="customers">
            <div class="card">
                <div class="card-header">
                    <h3>Friends</h3>
                    <button>See all  <span class="las la-arrow-right"></span></button>
                </div>
                <div class="card-body">
                    @if (Model.Friends.Count != 0)
                    {
                        @foreach (var f in Model.Friends)
                        {
                            <div class="customer">
                                <div class="info">
                                    <img src="@f.ProfileImgUrl" width="40px" height="40px" />
                                    <div>
                                        <h4>@f.UserName</h4>
                                        <small>CEO Expert</small>
                                    </div>
                                </div>
                                <div class="contact">
                                    <span class="las la-user-circle"></span>
                                    <span class="las la-comment"></span>
                                    <span class="las la-phone"></span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>You don't have any friends!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    showInPopup = (url,title) => {
        $.ajax({
            type: 'GET',
            url: url,
            success: function (res) {
                $('#form-modal .modal-body').html(res);
                $('#form-modal .modal-title').html(title);
                $('#form-modal').modal('toggle');
            }
        })
    }
</script>

